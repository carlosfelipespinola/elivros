
<%= render "/admin/partials/navbar" %>

<div class="ui container">
  <% if @p %>
  <%= @p.inspect %>
  <%end%>
  <table class="ui compact celled definition table">
    <thead>
      <tr>
        <th></th>
        <th>Nome</th>
        <th>PDF</th>
        <th>Editora</th>
        <th>Ultima atualização</th>
        <th>Avaliação</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="collapsing">
          <div class="ui fitted slider checkbox">
            <input type="checkbox"> <label></label>
          </div>
        </td>
        <td>{{titulo}}</td>
        <td>{{link pdf}}</td>
        <td>{{editora}}</td>
        <td>{{ultima atualização}}</td>
        <td>
          <div class="ui star rating" data-rating="3" data-max-rating="3"></div>
        </td>
      </tr>
      
    </tbody>
    <tfoot class="full-width">
      <tr>
        <th></th>
        <th colspan="5">
          <button id="btn-cadastrar-livro" class="ui right floated small primary labeled icon button">
            <i class="user icon"></i> Cadastrar livro
          </button>
          <div class="ui small button">
            Deletar
          </div>
          <div class="ui small  disabled button">
            Deletar Todos
          </div>
        </th>
      </tr>
    </tfoot>
  </table>

</div>

<%= render "form_modal"%>

<% content_for :javascript do %>
  <script>

		$('.rating').rating('disable');
 
    $("#btn-cadastrar-livro").on('click',function(e){
      $('#formulario-modal-cadastro-livros.ui.modal').modal('show');
    });
  
  </script>
<% end %>